<?xml version="1.0" encoding="UTF-8"?>
<selector
xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_focused="true" >
    <shape android:shape="rectangle">
      <gradient
          android:startColor="#FFFFFF"
          android:endColor="#FFFFFF"
          android:angle="270" />
      <stroke
          android:width="2dp"
          android:color="#0962C1" />
      <!-- #0962c1 - blue, #409e17 - green-->
      <corners
          android:radius="15dp" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <gradient
          android:startColor="#FFFFFF"
          android:endColor="#FFFFFF"
          android:angle="270" />
      <corners
          android:radius="15dp" />
    </shape>
  </item>
</selector>